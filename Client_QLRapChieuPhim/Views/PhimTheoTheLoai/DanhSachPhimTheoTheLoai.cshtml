@model IEnumerable<gRPC_QLRapChieuPhim.Output.Types.Phim>

@{
    ViewData["Title"] = "Danh sách phim theo thể loại";
}
<style>
    .category-products {
        float: left;
        width: 100%;
    }

    ul.products-grid {
        list-style: none;
        float: left;
        width: 100%;
        margin-bottom: 40px;
    }

    .products-grid > li {
        float: left;
        position: relative;
        margin-bottom: 20px;
    }

    .products-grid .product-info {
        position: relative;
        padding-bottom: 95px;
    }

    .products-grid li .product-info {
        width: 100%;
        max-height: none;
        height: 137px;
        min-height: 52px;
    }

    .list-movies > li {
        text-align: left;
    }

        .list-movies > li.item {
            margin-right: 25px;
            width: 197px;
        }

    .products-grid .product-name, .products-list .product-name {
        text-transform: uppercase;
        margin: 5px 0 8px;
        font-size: 14px;
        font-family: "Helvetica Neue", Verdana, Arial, sans-serif;
    }

    .category-products .products-grid .product-name a {
        color: #333 !important;
        font-size: 15px;
        font-weight: bold;
        text-transform: none;
    }

    .info-bold {
        font-weight: bold;
        font-size: 14px;
    }

    .info-normal {
        font-size: 15px;
    }
</style>
<h4><a asp-action="Index">Trang trước</a></h4>
<div class="row">
    <h2 id='target' class="page-heading heading--outcontainer">@ViewData["TieuDe"]</h2>
    <div class="category-products">
        @if (Model.Count() > 0)
        {
            <ul class="products-grid list-movies">
                @foreach (var phim in Model)
                {
                    <li class="film-lists item last">

                        <div class="product-images">
                            <a href="#" title="@phim.TenPhim" class="product-image">
                                <img id="product-collection-image-3428" src="data:image/png;base64, @phim.Poster" alt="@phim.TenPhim">
                            </a>
                        </div>

                        <div class="product-info">
                            <h2 class="product-name"><a href="#" title="@phim.TenPhim">@phim.TenPhim</a></h2>
                            <div class="movie-info">
                                <span class="info-bold">Thời lượng: </span>
                                <span class="info-normal">@(phim.ThoiLuong==0?"Chưa cập nhật": phim.ThoiLuong.ToString() + " phút")</span>
                            </div>

                            <div class="movie-info">
                                <span class="info-bold">Khởi chiếu: </span>
                                <span class="info-normal">@(phim.NgayKhoiChieu==null?"Chưa cập nhật":phim.NgayKhoiChieu.ToDateTime().ToString("dd/MM/yyyy"))</span>
                            </div>
                        </div>
                    </li>
                }
            </ul>
        }
        else
        {
            <h3>Chưa có lịch chiếu</h3>
        }
    </div>
</div>